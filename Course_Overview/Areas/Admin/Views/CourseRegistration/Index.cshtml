@model IEnumerable<LModels.CourseRegistration>

<h2>Course Registrations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Student</th>
            <th>Phone</th>
            <th>Registration Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Course?.CourseName</td>
                <td>@item.Student?.Name</td>
                <td>@item.Student?.Phone</td>
                <td>@item.RegistrationDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <form asp-area="Admin" asp-controller="CourseRegistration" asp-action="AcceptRegistration" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.CourseRegistrationID" />
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle-fill"></i> Accep
                        </button>
                    </form>
                    <form asp-area="Admin" asp-controller="CourseRegistration" asp-action="RejectRegistration" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.CourseRegistrationID" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-x-circle-fill"></i> Reject
                        </button>
                    </form>
                    <a  class="btn btn-danger" asp-area="Admin" asp-route-id="@item.CourseRegistrationID" asp-action="Delete">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
